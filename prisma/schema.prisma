generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Test {
  id   String @id @default(uuid())
  name String
}

model ForbiddenWord {
  id   String @id @default(uuid())
  word String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Member {
  id           String  @id @default(uuid())
  clerkId      String  @unique
  username     String
  city         String?
  state        String?
  description  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
